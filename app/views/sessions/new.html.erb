<div class="login">
<h1>Login</h1>

<%= form_tag login_path do %>

<div><%= label_tag "Username" %>
     <%= text_field_tag :username %></div>

<div><%= label_tag "Password" %>
     <%= password_field_tag :password %></div>

<div><%= label_tag "Confirm Password" %>
     <%= password_field_tag :password_confirmation %></div>

<%= submit_tag "Login" %>
<% end %> 
</div>