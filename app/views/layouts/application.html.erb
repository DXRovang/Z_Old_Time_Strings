<!DOCTYPE html>
<html>
  <head>
    <title>ZOldTimeStrings</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="/styles2.css"> 
  </head>
  <body>
    <% if current_user %>
      <div><%= button_to "Homepage", families_path, method: :get %></div>
      <div><%= button_to "Logout", logout_path, method: :post %></div><br>
    <% else %>
      <%= link_to "Login", login_path %><br>
      <%= link_to "Signup", signup_path %><br>
    <% end %>

    <%= yield %><br>
    
  </body>
</html>
