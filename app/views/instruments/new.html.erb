<div class="show title">
<h1>
Add a 
<% if @family.id == 1 %>
Banjo
<% elsif @family.id == 2 %>
Guitar
<% elsif @family.id == 3 %>
Mandolin
<% end %>
to the Database
</h1></div>

<%= form_for @instrument do |form| %>

<%= render partial: "instruments/attributes1", locals: { form: form, family: @family, instrument: @instrument } %>

<% if @family.id == 1 %>
  <div><%= form.label "Back"%></div>
  <%= form.text_field :back%>
<% elsif @family.id == 2 %>
  <div><%= form.label "Bridge"%></div>
  <%= form.text_field :bridge%>
  <div><%= form.label "Neck"%></div>
  <%= form.text_field :neck%>
<% elsif @family.id == 3 %>
  <div><%= form.label "Sound_hole"%></div>
  <%= form.text_field :sound_hole%>
<% end %>

<%= render partial: "instruments/attributes2", locals: { form: form } %>
<% end %>
