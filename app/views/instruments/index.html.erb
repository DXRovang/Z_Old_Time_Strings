<div class="show title"><h1>All Instruments</h1></div>


<% @instruments.each do |i| %>
  <% category = Category.find_by(id: i.category_id) %>
  <% if i.for_sale == true %>
    <li>(<%= i.year %>) <%= link_to category.name, instrument_path(i) %> by <%= i.maker.name %>, $<%= number_with_precision(i.price, :precision => 2) %></li>
  <% end %>
<% end %>
